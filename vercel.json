{
  "functions": {
    "src/app/**/*.{js,ts,jsx,tsx}": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/storage/clean-orphans",
      "schedule": "0 3 * * *" // diario a las 03:00 UTC
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cross-Origin-Embedder-Policy",
          "value": "require-corp"
        },
        {
          "key": "Cross-Origin-Opener-Policy",
          "value": "same-origin"
        }
      ]
    }
  ]
}